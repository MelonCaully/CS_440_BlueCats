<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueCatsApp.AddPlayerPage"
             Title="Create A Character">
    <VerticalStackLayout>
        <Label 
            x:Name="title_label"
            Text="Add Character"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid HorizontalOptions="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label
                Text="Name"
                Grid.Row="0"
                Grid.Column = "0"
                />
            <Entry x:Name="name"
                Grid.Row="0"
                Grid.Column="1"
                Placeholder="Enter name"
                   />
            <Label
                Text ="Race"
                Grid.Row="1"
                Grid.Column="0"
                />
            <Picker x:Name="RacePicker" Grid.Row="1" Grid.Column="1">
                
            </Picker>
            <Label
                Text ="Class"
                Grid.Row="2"
                Grid.Column="0"
                />
            <Picker x:Name="ClassPicker" Grid.Row="2" Grid.Column="1">

            </Picker>
            <Label
                Text ="Spell"
                Grid.Row="3"
                Grid.Column="0"
            />
            <Picker x:Name="SpellPicker" Grid.Row="3" Grid.Column="1">

            </Picker>

        </Grid>
    </VerticalStackLayout>
</ContentPage>