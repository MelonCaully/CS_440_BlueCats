<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlueCatsApp.PlayerSheetPage"
             Title="Player Sheet">
    <ScrollView>
        <Grid Padding="20"
              RowSpacing="10"
              ColumnDefinitions="Auto, *, Auto, *, Auto, *, Auto, Auto"
              RowDefinitions="Auto">
            <!-- Name -->
            <Label Text="Name:" FontAttributes="Bold"/>
            <Label Text="{Binding Name}" Grid.Column="1"/>

            <!-- Race -->
            <Label Text="Race:" Grid.Column="2" FontAttributes="Bold"/>
            <Label Text="{Binding Race}" Grid.Column="3"/>

            <!-- Class -->
            <Label Text="Class:" Grid.Column="4" FontAttributes="Bold"/>
            <Label Text="{Binding Class}" Grid.Column="5"/>

            <!-- Level -->
            <Label Text="Level:" Grid.Column="6" FontAttributes="Bold"/>
            <Label Text="{Binding Level}" Grid.Column="7"/>

        </Grid>
    </ScrollView>
</ContentPage>
