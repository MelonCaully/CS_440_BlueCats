<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BlueCatsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlueCatsApp"
    Shell.FlyoutBehavior="Flyout"
    Title="BlueCatsApp"
    BackgroundColor="#FF3A0000"
    TitleColor="White">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title= "Create A Character"
        ContentTemplate="{DataTemplate local:AddPlayerPage}"
        Route="AddPlayerPage"/>

    <ShellContent
        Title= "My Characters"
        ContentTemplate="{DataTemplate local:MyPlayerPage}"
        Route="MyPlayerPage"/>

    <ShellContent
        Title= "Classes"
        ContentTemplate="{DataTemplate local:ClassesPage}"
        Route="ClassesPage"/>

    <ShellContent
        Title= "Races"
        ContentTemplate="{DataTemplate local:RacesPage}"
        Route="RacesPage"/>

    <ShellContent
        Title= "Spells"
        ContentTemplate="{DataTemplate local:SpellsPage}"
        Route="SpellsPage"/>

    <ShellContent
        Title= "Weapons"
        ContentTemplate="{DataTemplate local:WeaponsPage}"
        Route="WeaponsPage"/>

</Shell>
