<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="BlueCatsApp.MyPlayerPage">

    <CollectionView x:Name="PlayerCollectionView">
        <CollectionView.ItemsLayout>
            <GridItemsLayout Orientation="Vertical" Span="2"
                            HorizontalItemSpacing="15"
                            VerticalItemSpacing="15" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border Stroke="Black" StrokeThickness="1" Background="White" Padding="10" Margin="10" StrokeShape="RoundRectangle 10">
                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions=".20*, .50*, .30*" ColumnSpacing="10" RowSpacing="5">
        
                        <Image Source="{Binding RaceImage}" 
                               MaximumHeightRequest="80" 
                               BackgroundColor="Transparent" 
                               Grid.RowSpan="2"
                               HorizontalOptions="Center"/>

                        <Label Text="{Binding Name}" 
                               FontAttributes="Bold" 
                               FontSize="16" 
                               Grid.Column="1"/>

                        <Label Text="{Binding InfoLine}" 
                               FontSize="14" 
                               Grid.Row="1" 
                               Grid.Column="1"/>

                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>